<div class="jumbotron-fluid text-center">
    <h1 class="display-2 mt-3">The 538 Scraper</h1>
    <nav class="navbar navbar-expand-lg navbar-light header-nav">
        <div class="container">
            <div class="row justify-content-between">
                <ul class=" navbar-nav text-center">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/saved">Saved Articles </a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-clear">
                            Clear Articles
                        </button>
                        
                    </li>
                </ul>
                <ul class="col-6 navbar-nav text-right">
                    
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="container pt-3 mt-3">
    <div class="card-columns">
        {{#each article}}
        <div class="card" style="width: 18em">
            <img class="card-img-top" src={{this.image}} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">
                    <a class="card-link" href={{this.link}}>{{this.title}}</a>
                </h5>
                <!-- Button trigger modal -->
                <button class="btn card-btn" data-toggle="modal" data-target="#Modal_{{this._id}}" data-id={{this._id}}><i class="far fa-save"></i> Add Note</button>
            </div>
        </div>  

        
    
        
        <!-- Modal for each saved article-->
        <div class="modal fade" id="Modal_{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Notes for <br><span>{{this.title}}</span></h5>
                        
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        {{!-- List of comments --}}
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Hello {{this.body}}
                                <span data-id={{this.id}} class="btn btn-danger">Delete</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Hello {{this.body}}
                                <span data-id={{this.id}} class="btn btn-danger">Delete</span>
                            </li>
                            
                            {{#each this.note}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Hello {{this.body}}
                                    <span data-id={{this.id}} class="btn btn-danger">Delete</span>
                                </li>
                            {{/each}}
                        </ul>

                        {{!-- Add new note input --}}
                        <div class="form-group mt-2">
                            <label for="new-note">Add New Note</label>
                            <textarea class="form-control new-note" id="new-note" rows="3"></textarea>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary save-note-btn">Save Note</button>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>